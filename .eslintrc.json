{
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked",
    "plugin:@typescript-eslint/strict-type-checked",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "plugin:effector/recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "plugins": ["effector"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module",
    "project": "./tsconfig.json",
    "extraFileExtensions": [".vue"]
  },
  "rules": {
    "import/no-unresolved": "off",
    "vue/multi-word-component-names": "warn",
    "@typescript-eslint/no-unsafe-argument": "warn",
    "@typescript-eslint/no-unsafe-assignment": "warn",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-plusplus": "error",
    "no-implicit-coercion": "error",
    "no-unneeded-ternary": "error",
    "curly": "error",
    "no-console": [
      "error",
      {
        "allow": ["info", "error"]
      }
    ],
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "eqeqeq": "error",
    "import/consistent-type-specifier-style": ["error", "prefer-top-level"],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "groups": [
          "index",
          "sibling",
          "parent",
          "internal",
          "external",
          "builtin",
          "object",
          "type"
        ],
        "pathGroupsExcludedImportTypes": ["type"],
        "pathGroups": [
          {
            "pattern": "vue**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@vueuse/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@tanstack/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "effector",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "effector-vue/composition",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "lucide-vue-next",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@shadcn",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@pages/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@widgets/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@features/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@entities/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@graphql/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@constants/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@types/**",
            "group": "type",
            "position": "before"
          }
        ]
      }
    ],
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports",
        "fixStyle": "separate-type-imports"
      }
    ],
    "vue/define-props-declaration": ["error", "type-based"],
    "vue/define-emits-declaration": ["error", "type-literal"],
    "vue/attributes-order": [
      "error",
      {
        "alphabetical": true,
        "order": [
          "DEFINITION",
          "LIST_RENDERING",
          "CONDITIONALS",
          "RENDER_MODIFIERS",
          "GLOBAL",
          ["UNIQUE", "SLOT"],
          "TWO_WAY_BINDING",
          "OTHER_DIRECTIVES",
          "ATTR_DYNAMIC",
          "ATTR_STATIC",
          "ATTR_SHORTHAND_BOOL",
          "EVENTS",
          "CONTENT"
        ]
      }
    ]
  }
}
